<local:BaseSprite
    x:Class="Galaga.View.Sprites.PlayerMissileSprite"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Galaga.View.Sprites"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="30"
    d:DesignWidth="15"
    Height="30"
    Width="16">

    <UserControl.Resources>
        <SolidColorBrush x:Key="MainColor" Color="LightGray" />
        <SolidColorBrush x:Key="AccentColor" Color="Red" />
    </UserControl.Resources>

    <Canvas>
        <Rectangle Height="25" Width="10" Canvas.Top="5" Canvas.Left="2.5" Fill="{StaticResource MainColor}" />
        <Ellipse Height="6" Width="10" Canvas.Top="2" Canvas.Left="2.5" Fill="{StaticResource AccentColor}"/>
        <Rectangle Height="3" Width="10" Canvas.Top="5" Canvas.Left="2.5" Fill="{StaticResource AccentColor}" />
    </Canvas>
</local:BaseSprite>
